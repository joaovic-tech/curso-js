<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="com-lg-2"></div>

    <div class="com-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo.</p>

      <%- include('includes/messages') %>

      <% if(contato._id) { %> 
      <form action="/contato/edit/<%= contato._id %>" method="POST">
        <% } else { %>
      <form id="form-contato" action="/contato/register" method="POST">
        <% } %> 
        <input type="hidden" name="_csrf" value=<%= csrfToken %> />
        <div class="mb-3">
          <label for="nome" class="form-label label-nome">Nome</label>
          <input value="<%= contato.nome %>" type="text" class="form-control" id="nome" name="nome" aria-describedby="nomeHelp"
          />
        </div>
        <div class="mb-3">
          <label for="sobrenome" class="form-label label-sobrenome">Sobrenome</label>
          <input value="<%= contato.sobrenome %>" type="text" class="form-control" id="sobrenome" name="sobrenome" aria-describedby="sobrenomeHelp"
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label label-email">E-mail</label>
          <input value="<%= contato.email %>" type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
          />
        </div>
        <div class="mb-3">
          <label for="telefone" class="form-label label-telefone">Telefone</label>
          <input value="<%= contato.telefone %>" type="tel" class="form-control" id="telefone" name="telefone" aria-describedby="telHelp"
          />
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>
    </div>

    <div class="com-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
